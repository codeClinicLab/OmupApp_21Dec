<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".destinations.UserProfileActivity">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <!--Toolbar-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/include_app_bar_blue"/>
    <!--Profile Layout-->
    <RelativeLayout
        android:id="@+id/profile_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue"
        android:padding="16dp"
        android:layout_below="@+id/toolbar">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_view"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/facebook_avatar"
             android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/select_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_enhance_blue_24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <!--User Information Layout-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/country"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="16dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Oluwasayo"
                    android:drawableRight="@drawable/ic_edit_grey_24dp"
                    android:drawableEnd="@drawable/ic_edit_grey_24dp"
                    android:textSize="14sp"
                    android:padding="14dp"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Ogunlade"
                    android:drawableRight="@drawable/ic_edit_grey_24dp"
                    android:drawableEnd="@drawable/ic_edit_grey_24dp"
                    android:textSize="14sp"
                    android:padding="14dp"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Juliana@gmail.com"
                    android:drawableRight="@drawable/ic_edit_grey_24dp"
                    android:drawableEnd="@drawable/ic_edit_grey_24dp"
                    android:textSize="14sp"
                    android:padding="14dp"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="+23480383672"
                    android:drawableRight="@drawable/ic_edit_grey_24dp"
                    android:maxLines="1"
                    android:drawableEnd="@drawable/ic_edit_grey_24dp"
                    android:textSize="14sp"
                    android:padding="14dp"/>
                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Nigeria"
                    android:textSize="14sp"
                    android:padding="14dp"
                    android:drawableRight="@drawable/ic_edit_grey_24dp"
                    android:maxLines="1"
                    android:drawableEnd="@drawable/ic_edit_grey_24dp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        style="@style/normal_button_blue"
        android:id="@+id/btn_save"
        android:text="@string/save_changes"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent"
        android:visibility="gone"
        android:layout_below="@+id/toolbar_layout">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</FrameLayout>